<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:networkSecurityConfig="@xml/network_security_config"
        android:icon="@mipmap/ic_launcher"
        android:label="Parcial2"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Parcial2"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="Parcial2"
            android:theme="@style/Theme.Parcial2">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <!-- Actividades Horario -->
        <activity
            android:name=".horario.MainHorarioActivity"
            android:exported="true"
            android:label="Mi horario"
            android:theme="@style/Theme.Parcial2"/>
        <activity
            android:name=".horario.AgregarAsignaturaActivity"
            android:exported="true"
            android:label="Mi horario - Añadir asignatura"
            android:theme="@style/Theme.Parcial2"/>
        <activity
            android:name=".horario.VerHorarioActivity"
            android:exported="true"
            android:label="Mi horario - Ver horario"
            android:theme="@style/Theme.Parcial2"/>
        <activity
            android:name=".horario.ClaseActualActivity"
            android:exported="true"
            android:label="Mi horario - ¿Qué toca ahora?"
            android:theme="@style/Theme.Parcial2"/>
        <!-- Actividades Eventos -->
        <activity
            android:name=".eventos.MainEventoActivity"
            android:exported="true"
            android:label="Eventos"
            android:theme="@style/Theme.Parcial2"/>
        <activity
            android:name=".eventos.AgregarEventoActivity"
            android:exported="true"
            android:label="Registro de Eventos"
            android:theme="@style/Theme.Parcial2"/>
        <!-- Actividades Farmacias -->
        <activity
            android:name=".farmacia.MainFarmaciaActivity"
            android:exported="true"
            android:label="Farmacias Zaragoza"
            android:theme="@style/Theme.Parcial2"/>
        <activity
            android:name=".farmacia.MapaFarmaciaActivity"
            android:exported="true"
            android:label="Mapa Farmacias"
            android:theme="@style/Theme.Parcial2"/>
    </application>

</manifest>